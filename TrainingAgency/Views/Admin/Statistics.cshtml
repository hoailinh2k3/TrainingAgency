@{
    ViewData["Title"] = "Thống kê khóa học";
}
<div class="container mt-5">
    <h2>Thống kê</h2>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body text-center">
                    <h3>@ViewBag.TotalCourses</h3>
                    <p>Khóa học</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body text-center">
                    <h3>@ViewBag.TotalStudents</h3>
                    <p>Học viên</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body text-center">
                    <h3>@ViewBag.TotalRegistrations</h3>
                    <p>Đăng ký</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-body text-center">
                    <h3>@ViewBag.TotalRevenue.ToString("N2")</h3>
                    <p>Doanh thu($)</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <canvas id="lineChart"></canvas>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <canvas id="barChart"></canvas>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var dayLabels = @Html.Raw(ViewBag.DayLabels);
        var dayRevenues = @Html.Raw(ViewBag.DayRevenues);

        var ctxLine = document.getElementById('lineChart').getContext('2d');
        var lineChart = new Chart(ctxLine, {
            type: 'line',
            data: {
                labels: dayLabels,
                datasets: [{
                    label: 'Doanh thu theo ngày',
                    data: dayRevenues,
                    borderColor: 'rgba(75, 192, 192, 1)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    fill: false,
                    tension: 0.1
                }]
            },
            options: {
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Ngày'
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Doanh thu($)'
                        }
                    }
                }
            }
        });

        var courseLabels = @Html.Raw(ViewBag.CourseLabels);
        var courseRevenues = @Html.Raw(ViewBag.CourseRevenues);

        var ctxBar = document.getElementById('barChart').getContext('2d');
        var barChart = new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: courseLabels,
                datasets: [{
                    label: 'Doanh thu theo khóa học',
                    data: courseRevenues,
                    backgroundColor: 'rgba(153, 102, 255, 0.6)',
                    borderColor: 'rgba(153, 102, 255, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                indexAxis: 'y',
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Doanh thu($)'
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Khóa học'
                        }
                    }
                }
            }
        });
    </script>
}
